<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sea">

    <TextView
        android:text="Simon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:id="@+id/simonTV"
        android:fontFamily="casual"
        android:textSize="50sp"
        android:textColor="@color/dark_red"
        android:textAllCaps="false"
        android:textStyle="normal|bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_media_play"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/play_imageButton" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_media_pause"
        android:id="@+id/pause_imageButton"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/play_imageButton"
        android:layout_toEndOf="@+id/play_imageButton" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/stop"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/pause_imageButton"
        android:layout_toEndOf="@+id/pause_imageButton"
        android:id="@+id/stop_imageButton" />

    <TextView
        android:text="Developers: Briana Schmidt and Zachary Pigott"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/names"
        android:textSize="10sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="@color/gray"
        android:textStyle="normal|bold"
        android:textAllCaps="false" />

    <Button
        android:text="play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/play"
        android:elevation="0dp"
        android:fontFamily="serif-monospace"
        android:textSize="24sp"
        android:textColor="@android:color/holo_green_dark"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/simonTV"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Simon says"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/version1"
        android:fontFamily="serif-monospace"
        android:textSize="24sp"
        android:textColor="#f7b124"
        android:layout_below="@+id/info"
        android:layout_toRightOf="@+id/pause_imageButton"
        android:layout_toEndOf="@+id/pause_imageButton" />

    <Button
        android:text="manual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/info"
        android:fontFamily="serif-monospace"
        android:textSize="24sp"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_below="@+id/copyright"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/copyright"
        android:fontFamily="serif-monospace"
        android:textSize="24sp"
        android:textColor="@android:color/holo_purple"
        style="@style/Widget.AppCompat.Button"
        android:layout_below="@+id/play"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="player adds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/version2"
        android:fontFamily="serif-monospace"
        android:textSize="24sp"
        android:textColor="@color/colorAccent"
        android:layout_below="@+id/version1"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="choose your color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/version3"
        android:textSize="24sp"
        android:fontFamily="serif-monospace"
        android:textColor="@color/darkpurple"
        android:layout_below="@+id/version2"
        android:layout_toRightOf="@+id/play_imageButton"
        android:layout_toEndOf="@+id/play_imageButton" />
</RelativeLayout>